{% extends 'base.html.twig' %}

{% block body %}


<div class="container mt-5 pt-5">
  <div class="d-flex justify-content-around flex-wrap">
    <div class="card lw-box-2 mb-5" style="max-width: 80rem;">
      <div class="row g-0">
        <div class="col-md-4">
          <img src="/uploads/character/princess.png" class="img-fluid rounded-start" alt="...">
        </div>
        <div class="col-md-8">
          <div class="card-body d-flex flex-column justify-content-between">
            <h3 class="card-title pt-3 pb-5 text-light">Characters</h5>
            <p class="card-text text-light">Here you can find a wide array of characters type. Many races are available, so you will most likely find what suits your need.</p>
            <a href="{{ path('download_characters') }}" class="btn btn-primary text-light btn-custom align-self-end">Go to characters</a>
          </div>
        </div>
      </div>
    </div>

    <div class="card lw-box-2 mb-5" style="max-width: 80rem;">
      <div class="row g-0">
        <div class="col-md-4">
          <img src="/uploads/background/space.png" class="img-fluid rounded-start" alt="...">
        </div>
        <div class="col-md-8">
          <div class="card-body d-flex flex-column justify-content-between">
            <h3 class="card-title pt-3 pb-5 text-light">Backgrounds</h5>
            <p class="card-text text-light">Discover a selection of backgrounds for your game. Futuristic, medieval or natural... many styles to cater to all your needs</p>
            <a href="{{ path('download_backgrounds') }}" class="btn btn-primary text-light btn-custom align-self-end">Go to backgrounds</a>
          </div>
        </div>
      </div>
    </div>

    <div class="card lw-box-2 mb-5" style="max-width: 80rem;">
      <div class="row g-0">
        <div class="col-md-4">
          <img src="/uploads/effect/potion.png" class="img-fluid rounded-start" alt="...">
        </div>
        <div class="col-md-8">
          <div class="card-body d-flex flex-column justify-content-between">
            <h3 class="card-title pt-3 pb-5 text-light">Effects</h5>
            <p class="card-text text-light">Abracadabra, boombadaboom... Wether your a spellcrafter or a building blower, there's an effect for your desire!</p>
            <a href="{{ path('download_effects') }}" class="btn btn-primary text-light btn-custom align-self-end">Go to effects</a>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

{% endblock %}