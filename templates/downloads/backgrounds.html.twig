{% extends 'base.html.twig' %}

{% block body %}

<h1 class="text-center text-light mt-5 pt-5 mb-5"> BACKGROUNDS </h1>

<div class="container">
<div class="d-flex justify-content-around flex-wrap">
{% for background in backgrounds %}
<div class="card lw-box-2 mb-3 mt-5" style="width: 18rem;">
  <img src="/uploads/background/{{background.picture}}" class="card-img-top" alt="...">
  <div class="card-body d-flex flex-column justify-content-between">
    <h5 class="card-title text-light">{{background.name}}</h5>
    <p class="card-text text-light">{{background.description}}</p>
    <a href="{{ path('app_download_background', {'id':background.id})}}" class="btn btn-primary text-light">Download Me</a>
  </div>
</div>
{% endfor %}
</div>
</div>
{% endblock %}